<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="349dp"
        android:background="@color/wave">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_settingmain"
            android:layout_width="30dp"
            android:layout_height="21dp"
            android:layout_margin="25dp"
            android:background="@drawable/setting"
            android:scaleType="fitXY" />

        <TextView
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="60dp"
            android:text="WAVE"
            android:textColor="@color/white"
            android:textSize="50dp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="387dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="135dp"
            android:layout_height="51dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="welcome"
            android:textColor="#535050"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="51dp"
            android:layout_gravity="center"
            android:text="Get started with your account"
            android:textColor="#838080"
            android:textSize="20dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="397dp"
            android:id="@+id/btn_joinmain"
            android:layout_height="68dp"
            android:layout_gravity="right"
            android:background="@drawable/join_btn"
            android:text="Join a Meeting"
            android:textColor="@color/white"
            android:textAllCaps="false"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="397dp"
            android:layout_height="68dp"
            android:layout_gravity="right"
            android:id="@+id/btn_sinupmain"
            android:layout_marginTop="15dp"
            android:background="@drawable/signup_btn"
            android:text="Sign Up"
            android:textColor="#201C1C"
            android:textStyle="bold"
            android:textAllCaps="false"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="397dp"
            android:id="@+id/btn_signinmain"
            android:layout_height="68dp"
            android:layout_gravity="right"
            android:layout_marginTop="15dp"
            android:background="@drawable/signup_btn"
            android:text="Sign In"
            android:textColor="#201C1C"
            android:textStyle="bold"
            android:textAllCaps="false"/>

    </LinearLayout>





</LinearLayout>