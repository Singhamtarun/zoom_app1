<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login_screen"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        >


        <TextView
            android:layout_width="334dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:text="Sign In"
            android:textAlignment="center"
            android:textSize="25dp" />
    </LinearLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:background="#F2F2F3"
        android:hint="ENTER YOUR EMAIL ADDRESS"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:textSize="18dp" />
    <EditText
        android:id="@+id/edt_emaillogin"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Email"
        android:textAlignment="center"
        android:layout_marginTop="3dp"
        android:textSize="18dp"/>
    <EditText
        android:id="@+id/edt_passwordlogin"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="Password"
        android:textAlignment="center"
        android:layout_marginTop="3dp"
        android:textSize="18dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="365dp"
        android:id="@+id/btn_signinlogin"
        android:layout_height="48dp"
        android:background="@drawable/signup_btn"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="Sign In"
        android:textSize="18sp"
        android:textAllCaps="false"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/txt_forgotlogin"
        android:text="Forgot Password?"
        android:textColor="#2662DA"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"/>
    <TextView
        android:id="@+id/other_login"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="OTHERS SIGN IN METHODS"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"/>

</LinearLayout>